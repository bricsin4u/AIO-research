{% layout none %}
{
  "$schema": "https://aio-standard.org/schema/v2.1/content.json",
  "aio_version": "2.1",
  "generated": "{{ 'now' | date: '%Y-%m-%dT%H:%M:%SZ' }}",
  "index": [
    {% paginate collections.all.products by 1000 %}
      {% for product in collections.all.products %}
        {
          "id": "prod-{{ product.id }}",
          "path": "{{ product.url }}",
          "title": {{ product.title | json }},
          "token_estimate": {{ product.description | strip_html | size | divided_by: 4 | plus: 1 }},
          "keywords": {{ product.tags | json }}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    {% endpaginate %}
  ],
  "content": [
    {% paginate collections.all.products by 1000 %}
      {% for product in collections.all.products %}
        {
          "id": "prod-{{ product.id }}",
          "format": "markdown",
          "content": "# {{ product.title }}\n\nPrice: {{ product.price | money }}\n\n{{ product.description | strip_html | strip_newlines }}",
          "hash": "sha256:dynamic"
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    {% endpaginate %}
  ]
}
